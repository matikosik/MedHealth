<body>
    <div class="container">
        <div>
            <div class="NAVBAR">
                <div>
                    <a href="dashboard"><img src="/images/logo.png" class="picpref responsive-img"></a>

                    <hr>
                </div>

                <p class="textoNavBar">MEDHEALTH</p>

                <p id="date">Fecha:
                    <%=day%> /
                        <%=month%> /
                            <%=year%>
                </p>

                <div id="av" onclick="hideav()">
                    <img src="images/UserAv.png" width="75%" height="75%" onclick="hidename()">
                </div>

                <p id="avtxt">
                    <%= fullName %>
                </p>

                <div id="avconfdisp">
